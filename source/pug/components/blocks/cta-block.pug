mixin cta-block()
  section.cta-block(id="cta-block")
    .container
      .cta-block__img
        +img("content", "img-room", "png", 562, 566, "Пример проекта")
      .cta-block__form
        h2.title.title--h2.cta-block__title Хотите заказать проект?
        p.cta-block__paragraph Оставьте заявку, и мы вам перезвоним
        form(action="" class="form")
          .form__input-wrapper
            input(type="text" id="name" name="name" required placeholder="Имя")
            label(for="name") Имя

          .form__input-wrapper
            input(type="email" id="email" name="email" required placeholder="E-mail")
            label(for="email") E-mail

          .form__input-wrapper
            input(type="tel" id="tel" name="tel" required placeholder="Телефон")
            label(for="tel") Телефон

          button(type="submit" class="btn btn--black-bg submit-btn") Отправить заявку

        .cta-block__download-buttons
          a.cta-block__download-btn.btn.btn--app-store(
            href="https://apps.apple.com/app/yourapp"
            target="_blank"
            rel="noopener noreferrer"
          )
            +icon("icon-app-store", 121, 36)
          a.cta-block__download-btn.btn.btn--google-play(
            href="https://play.google.com/store/apps/details?id=yourapp"
            target="_blank"
            rel="noopener noreferrer"
          )
            +icon("icon-google-play", 121, 36)
